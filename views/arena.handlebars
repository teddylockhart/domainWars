<div id="gameArena" class="row noMarg">
    <div id="rulesBox" class="col s3 m3 l3">
        Rules: <button id="testBtn">Test</button>
        <br>
    </div>
    <div class="col s9 m9 l9">

        <div class="row noMarg">
            <div class="col s2 m2 l2">
                <div class="deckBox">Deck</div>
                <div id="compDiscard" class="deckBox">Discard</div>
            </div>
            <div class="col s8 m8 l8">
                <div class="row noMarg">
                    <div id="computercard0" class="col s4 m4 l4 center-align valign-wrapper z-depth-1"></div>
                    <div id="computercard1" class="col s4 m4 l4 center-align valign-wrapper z-depth-1"></div>
                    <div id="computercard2" class="col s4 m4 l4 center-align valign-wrapper z-depth-1"></div>
                </div>
            </div>
            <div class="col s2 m2 l2 avatarBox">
                <img id="avatarImg" src="assets/images/avatar-placeholder2.png">
            </div>
        </div>

        <div class="row noMarg">
            <div id="battleBoxPlayer" class="col s5 m5 l5 center-align valign-wrapper z-depth-2">
                battle
            </div>
            <div class="col s2 m2 l2">
                <a id="roundUp" class="waves-effect waves-light btn">Fight</a>
            </div>
            <div id="battleBoxComp" class="col s5 m5 l5 center-align valign-wrapper z-depth-2">
                battle

            </div>
        </div>

        <div class="row noMarg">
            <div class="col s2 m2 l2 avatarBox">
                <img id="avatarImg" src="assets/images/avatar-placeholder.png">
            </div>
            <div class="col s8 m8 l8">
                <div class="row noMarg">
                    <div id="playercard0" data=0 class="col s4 m4 l4 playercard center-align valign-wrapper z-depth-1"></div>
                    <div id="playercard1" data=1 class="col s4 m4 l4 playercard center-align valign-wrapper z-depth-1"></div>
                    <div id="playercard2" data=2 class="col s4 m4 l4 playercard center-align valign-wrapper z-depth-1"></div>
                </div>
            </div>
            <div class="col s2 m2 l2">
                <div class="deckBox">Deck</div>
                <div id="playerDiscard" class="deckBox">Discard</div>
            </div>
        </div>
    </div>
</div>